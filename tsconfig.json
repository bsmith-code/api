{
  "extends": "./node_modules/@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "build",
    "paths": {
      "config/*": ["./config/*"],
      "constants/*": ["./constants/*"],
      "controllers/*": ["./controllers/*"],
      "database/*": ["./database/*"],
      "utils/*": ["./utils/*"],
      "middleware/*": ["./middleware/*"],
      "models/*": ["./models/*"],
      "routes/*": ["./routes/*"],
    },
    "experimentalDecorators": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}