{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "build",
    "paths": {
      "routes/*": ["./routes/*"],
      "controllers/*": ["./controllers/*"],
      "middleware/*": ["./middleware/*"],
      "constants/*": ["./constants/*"],
      "helpers/*": ["./helpers/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}