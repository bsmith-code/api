{
  "name": "api-gateway",
  "private": true,
  "version": "2.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "dotenv -e .env.local -- ts-node-dev -r tsconfig-paths/register --respawn src",
    "seed:local": "dotenv -e .env.local npx sequelize-cli db:seed:all",
    "seed:prod": "dotenv -e .env npx sequelize-cli db:seed:all",
    "build": "tsc && resolve-tspaths",
    "postbuild": "cp package.json build && cp yarn.lock build && cp .sequelizerc build && cp tsconfig.json build",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "pretty": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.9.4",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.0.0",
    "express": "^4.17.1",
    "express-validator": "^7.0.1",
    "helmet": "^6.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^2.2.5",
    "node-fetch": "2",
    "nodemailer": "^6.9.1",
    "rand-token": "^1.0.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.33.0",
    "sequelize-typescript": "^2.1.5",
