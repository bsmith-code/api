    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^26.1.5",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-unicorn": "^42.0.0",
    "nodemon": "^2.0.2",
    "prettier": "^2.8.4",
    "resolve-tspaths": "^0.8.14",
    "sequelize-cli": "6.3.0",
    "ts-node-dev": "^2.0.0",
